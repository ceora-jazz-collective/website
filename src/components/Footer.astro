---
import { CONTACT_EMAIL } from '../config/variables';
const year = new Date().getFullYear();
---

<footer class="site-footer" role="contentinfo">
  <div class="site-footer__inner">
    <div class="site-footer__brand">
      <a
        class="site-footer__logo"
        href="/"
        aria-label="Ceora Jazz Collective - Startseite"
      >
        <img
          class="site-footer__logo-img"
          src="/logo-white.svg"
          alt="Ceora Jazz Collective"
          height="60"
        />
      </a>
      <p class="site-footer__tagline">Jazz Collective Wien</p>
    </div>

    <nav class="site-footer__nav" aria-label="Footer">
      <a class="site-footer__link" href="/#about">Über uns</a>
      <a class="site-footer__link" href="/#gigs">Gigs</a>
      <a class="site-footer__link" href="/#media">Media</a>
      <a class="site-footer__link" href="/#contact">Kontakt</a>
    </nav>

    <div class="site-footer__legal">
      <p class="site-footer__copyright">
        © {year} CEORA.<br />Alle Rechte vorbehalten.
      </p>
      <a class="site-footer__link" href="/impressum">Impressum</a>
      <a class="site-footer__link" href={`mailto:${CONTACT_EMAIL}`}
        >{CONTACT_EMAIL}</a
      >
    </div>
  </div>
</footer>
