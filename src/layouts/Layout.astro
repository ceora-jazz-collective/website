---
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import '../styles/styles.scss';
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>CEORA – Jazzkollektiv aus Wien | Live Jazz & Booking</title>
    <meta
      name="description"
      content="CEORA ist ein Wiener Jazzkollektiv mit variabler Besetzung. Eigenständige Arrangements, Live-Konzerte und Booking-Informationen."
    />
  </head>
  <body>
    <Nav />
    <main class="site-main">
      <slot />
    </main>
    <Footer />

    <!-- 100% privacy-first analytics -->
    <script
      data-collect-dnt="true"
      async
      src="https://scripts.simpleanalyticscdn.com/latest.js"></script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  body {
    padding-top: 72px;
  }

  @media (max-width: 768px) {
    body {
      padding-top: 64px;
    }
  }
</style>
